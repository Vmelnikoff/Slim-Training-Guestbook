{% extends 'layouts/layout.inc.twig' %}

{% block title %}Training guest book - Добавить отзыв{% endblock %}
{% block description %}Описание страницы для SEO{% endblock %}
{% block keywords %}Ключевые слова для SEO{% endblock %}

{% block content %}

    <div class="starter-template">
        <h1>{% if title != '' %}{{ title }}{% else %}Добавить отзыв{% endif %}</h1>
        <p><a href="/">Вернуться на главную</a></p>
    </div>

    <div id="form">
        <form action="" method="post">
            <p><input name="first_name" class="form-control" placeholder="Ваше имя"
                      value="{% if data.name != '' %}{{ data.name }}{% endif %}" autofocus></p>
            <p><textarea name="note" class="form-control"
                         placeholder="Ваш отзыв">{% if data.note != '' %}{{ data.note }}{% endif %}</textarea></p>
            <p><input type="submit" class="btn btn-info btn-block" value="Сохранить"></p>
        </form>
    </div>

{% endblock %}


